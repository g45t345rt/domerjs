const { createApp } = domerjs

// Remarckable from https://github.com/jonschlinkert/remarkable
// window.Remarkable = Remarkable
const md = new Remarkable()

const inputDesc = {
  tag: 'div',
  render: 'Enter some markdown'
}

const input = {
  tag: 'textarea',
  render: function () {
    return editor.state.markdownText
  },
  events: {
    input: function (e) {
      const { value } = e.target
      editor.setState({ markdownText: value })
    }
  }
}

const inputArea = {
  tag: 'div',
  render: [
    inputDesc,
    input
  ]
}

const outputText = {
  tag: 'div',
  html: true,
  render: function () {
    return md.render(editor.state.markdownText)
  }
}

const outputArea = {
  tag: 'div',
  render: outputText
}

const editor = {
  tag: 'div',
  state: {
    markdownText: 'Hello, **world**!s'
  },
  render: [
    inputArea,
    outputArea
  ]
}

createApp(editor, document.getElementById('output'), {})